---
import { Image } from "astro:assets";

import { getLocaleFromUrl } from "@/js/localeUtils";
import { getTranslatedData, useTranslations } from "@/js/translationUtils";
import BaseLayout from "@/layouts/BaseLayout.astro";
import heroImage from "@images/econrunes/EconRunesWorldMap.webp";
import AboutSideImage from "@/components/about/AboutSideImage.astro";
import FeatureSideImageProps from "@/components/feature/FeatureSideImageProps.astro";
import { type FeatureItem } from "@/config/types/configDataTypes";

const currLocale = getLocaleFromUrl(Astro.url);
const siteData = getTranslatedData("siteData", currLocale);

const featureData: FeatureItem[] = [
  {
    badge: "",
    image: heroImage,
    title: "The Challenge in Today’s Economics Classroom",
    description:
      "Students struggle with abstract theory which often fails to engage students, leading to lower retention and understanding of key economic concepts. Memorization without intuition, low engagement levels, and difficulty applying theory to real-world scenarios are common issues. Instructors struggle with Keeping students engaged, Demonstrating practical applications of economic theories, and providing interactive learning experiences.",
    href: "/games/econrunes/play/",
    buttonText: "Play Now",
  },
  {
    badge: "",
    image: heroImage,
    title: "The Gold Simulations Solution",
    description:
      "A modern, immersive, browser-based simulation platform that transforms economics into a hands-on, exploratory experience. Students don’t just learn economics — they experience it.",
    href: "/games/econrunes/play/",
    buttonText: "Play Now",
  },
];
---

<BaseLayout title={siteData.title} description={siteData.description} navStyle="default">
  <AboutSideImage />
  <FeatureSideImageProps featureData={featureData} start="left" />
</BaseLayout>