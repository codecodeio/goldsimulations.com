---
/**
 * * These are alternating side cards with titles, text, and images
 * Recommend using 2 or 3 cards in a row
 */
import FeatureCard from "@/components/feature-card/FeatureCardSideImage.astro";
import { type FeatureItem } from "@/config/types/configDataTypes";

export interface Props {
  featureData: FeatureItem[];
  start?: "left" | "right";
}

const { featureData, start } = Astro.props as Props;
let evenImageSide: "left" | "right" = "right";
let oddImageSide: "left" | "right" = "left";
if (start && start !== "right") {
  evenImageSide = "left";
  oddImageSide = "right";
}
---

<section id="feature-side-image" class="my-12 overflow-hidden py-12">
  <div class="site-container">
    <div class="flex flex-col gap-16 md:gap-24">
      {
        featureData.map((feature, idx) => (
          <FeatureCard
            badge={feature.badge}
            title={feature.title}
            description={feature.description}
            image={feature.image}
            imageSide={idx % 2 === 0 ? evenImageSide : oddImageSide}
            href={feature.href}
            buttonText={feature.buttonText}
          />
        ))
      }
    </div>
  </div>
</section>