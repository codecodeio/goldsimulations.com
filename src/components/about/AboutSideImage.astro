---
import { Image } from "astro:assets";
import Button from "@/components/button/Button.astro";
import Badge from "@/components/starwind/badge/Badge.astro";
import { getLocaleFromUrl } from "@/js/localeUtils";
import heroImage from "@images/econrunes/EconRunesWorldMap.webp";
const currLocale = getLocaleFromUrl(Astro.url);
interface Props {
  class?: string;
}

const { class: className } = Astro.props as Props;
---

<section class:list={["py-16 md:py-24", className]}>
  <div class="site-container grid gap-8 md:grid-cols-2 md:gap-16">
    <div class="" id="about-side-image-trigger">
      <h2 data-mos="fade-up" class="h1">Interactive Economics Simulations for <span class="text-primary-accent">Modern </span> Classrooms</h2>

      <div class="text-muted-foreground mt-6">
        <p
          class="md:text-lg"
          data-mos="fade-up"
          data-mos-anchor="#about-side-image-trigger"
          data-mos-delay=".2"
        >
          EconRunes is designed to transform the way economics is taught and learned. By integrating interactive simulations into the curriculum, EconRunes allows students to actively engage with economic concepts, making learning more dynamic and effective. 
        </p>

        <p
          class="mt-6 md:text-lg"
          data-mos="fade-up"
          data-mos-anchor="#about-side-image-trigger"
          data-mos-delay=".4"
        >
          Our simulations are meticulously crafted based on educational research to ensure they meet the needs of modern classrooms.
        </p>

        <p
          class="mt-6 md:text-lg"
          data-mos="fade-up"
          data-mos-anchor="#about-side-image-trigger"
          data-mos-delay=".6"
        >
          Turn economic concepts into hands-on learning with immersive digital simulations built for high schools, colleges, and MBA programs.
        </p>
      </div>
      <div class="pt-8" data-mos="fade-up"
          data-mos-delay=".6"
          data-mos-anchor="#hero-side-coming-soon">
        <Badge variant="warning">Coming Soon!</Badge>
        </div>
        
        <div
          class="mt-6 flex flex-wrap justify-center gap-4 md:justify-start"
          data-mos="fade-up"
          data-mos-delay=".6"
          data-mos-anchor="#hero-side-cta"
        >
          <Button variant="primary" arrow="right" href={"/resources/syllabus/"}>
            Resources
          </Button>
          
          <Button
            variant="secondary"
            arrow="right"
            href="/games/econrunes/"  
          >
            Explore The Game
          </Button>
        </div>
    </div>

    <div class="overflow-clip rounded-2xl">
      <Image
        src={heroImage}
        alt="Interactive Economics Simulations for Modern Classrooms"
        width={1001}
        densities={[1.5, 2]}
        class="h-full w-full object-cover"
      />
    </div>
  </div>
</section>