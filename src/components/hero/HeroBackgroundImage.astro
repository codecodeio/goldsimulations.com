---
import doctorImage from "@images/hero/btmgame.webp";
import backgroundImage from "@images/hero/hero_bg_3-min.png";
import { Image } from "astro:assets";

import Button from "@/components/button/Button.astro";
import { getLocaleFromUrl } from "@/js/localeUtils";
import { getLocalizedRoute, getTranslatedData, useTranslations } from "@/js/translationUtils";

const currLocale = getLocaleFromUrl(Astro.url);
---

<section
  class="relative isolate mx-auto flex w-full items-center overflow-hidden"
  aria-label="Hero section"
>
  <Image
    src={backgroundImage}
    alt="Blue healthcare background"
    class="pointer-events-none absolute inset-0 z-0 h-full w-full object-cover dark:brightness-25"
    aria-hidden="true"
  />

  <div
    class="site-container relative flex h-full min-h-full grow flex-col items-center md:items-start justify-between gap-8 md:flex-row"
  >
    <div id="hero-shapes-trigger" class="max-w-2xl flex-1 pt-30 md:py-44 lg:pb-50">
      <h1
        data-mos-anchor="#hero-shapes-trigger"
        data-mos="fade-right"
        class="text-foreground leading-tighter font-heading mb-4 text-4xl font-semibold md:text-5xl xl:text-7xl"
      >
        Beat The Market: An
        <span class="text-primary-accent">Interactive </span>
        Microeconomics Game
      </h1>
      <p
        data-mos-anchor="#hero-shapes-trigger"
        data-mos="fade-right"
        data-mos-delay=".2"
        class="text-muted-foreground mb-8 text-lg md:text-xl"
      >
        Run a firm. Compete through multiple periods. Learn microeconomics from your resultsâ€”backed by graphs, reports, and assignable exercises.
      </p>
      <Button
        type="button"
        href={`#contact`}
        variant="primary"
        class="md:text-lg"
        aria-label="Book An Appointment"
        data-mos-anchor="#hero-shapes-trigger"
        data-mos="fade-right"
        data-mos-delay=".4"
      >
        Book An Appointment
      </Button>
    </div>
    <div
      class="xs:h-[360px] mt-auto md:mt-0 flex h-[300px] justify-end md:h-[500px] md:pt-0 lg:h-[600px] xl:h-[700px]"
    >
      <Image
        src={doctorImage}
        alt="Smiling healthcare professional with stethoscope"
        class="m-0 h-auto max-h-full w-[220px] xs:w-[260px] md:w-[340px] lg:w-[400px] xl:w-[460px] object-contain p-0"
        width={700}
        sizes="(min-width: 1280px) 460px, (min-width: 1024px) 400px, (min-width: 768px) 340px, (min-width: 475px) 260px, 220px"
        densities={[1.5, 2]}
        loading="eager"
      />
    </div>
  </div>
</section>