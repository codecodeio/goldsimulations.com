---
import Button from "@/components/button/Button.astro";
import { getLocaleFromUrl } from "@/js/localeUtils";
import { getTranslatedData, useTranslations } from "@/js/translationUtils";

const currLocale = getLocaleFromUrl(Astro.url);
const siteData = getTranslatedData("siteData", currLocale);
---

<section
  class="site-container flex min-h-[40lvh] flex-col items-center justify-center pt-10 pb-24 text-center md:pt-16 md:pb-32"
>
  <h1 class="text-3xl font-medium text-pretty md:text-5xl" data-mos="fade-up">
    Bring Interactive Learning to Your Classroom
  </h1>
  <p class="text-muted-foreground mx-auto mt-6 max-w-xl" data-mos="fade-up" data-mos-delay=".2">
    {siteData.title}
  </p>
  <div
    class="mt-6 flex flex-wrap justify-center gap-4 md:justify-start"
    data-mos="fade-up"
    data-mos-delay=".4"
    data-mos-anchor="#hero-basic-cta"
  >
    <Button variant="primary" href={"/coming-soon"}>
      Get Started
    </Button>
    <Button
      variant="secondary"
      arrow="right"
      href="/features/"  
    >
      Features
    </Button>
    <Button
      variant="outline"
      arrow="right"
      href="/games/econrunes/"  
    >
      Explore The Game
    </Button>
  </div>
</section>