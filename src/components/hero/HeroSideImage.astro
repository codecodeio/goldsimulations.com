---
/**
 * * Hero with image one the side
 */

import heroImage from "@images/econrunes/EconRunesWorldMap.webp";
import { Image } from "astro:assets";

import Button from "@/components/button/Button.astro";
import { getLocaleFromUrl } from "@/js/localeUtils";
import Badge from "@/components/starwind/badge/Badge.astro";

const currLocale = getLocaleFromUrl(Astro.url);
---

<!-- "dark" class forces dark mode for this section -->
<section id="hero-side" class="mt-14 overflow-x-clip">
  <div class="site-container py-16 md:py-20">
    <div
      class="mx-auto grid max-w-md gap-10 text-center md:max-w-none md:grid-cols-2 md:text-left xl:items-center"
    >
      <div class="mx-auto my-auto w-full pt-4 md:ml-0 md:max-w-[560px] md:py-10 lg:pr-10">
        <div class="" data-mos="fade-up" data-mos-anchor="#hero-side">
          <h1
            class="mb-6 text-5xl leading-tight font-medium tracking-tight text-pretty md:text-5xl md:leading-tight"
          >
            Where Economics Becomes <span class="text-primary-accent">Adventure</span>
          </h1>
        </div>
        <p
          class="description mb-8 text-pretty lg:text-lg"
          data-mos="fade-up"
          data-mos-delay=".1"
          data-mos-anchor="#hero-side-overview"
        >
          Turn economic concepts into hands-on learning with our immersive simulation game, EconRunes, that brings your classroom to life. Let students explore, experiment, and truly understand how economies work. Built for colleges, MBA programs, and high schools.
        </p>
        <div data-mos="fade-up"
          data-mos-delay=".2"
          data-mos-anchor="#hero-side-coming-soon">
        <Badge variant="warning">Coming Soon!</Badge>
        </div>
        
        <div
          class="mt-6 flex flex-wrap justify-center gap-4 md:justify-start"
          data-mos="fade-up"
          data-mos-delay=".3"
          data-mos-anchor="#hero-side-cta"
        >
          <Button variant="primary" arrow="right" href={"/features/"}>
            Features
          </Button>
          
          <Button
            variant="secondary"
            arrow="right"
            href="/games/econrunes/"  
          >
            Explore The Game
          </Button>
        </div>
      </div>

      <div
        class="flex h-full w-full flex-grow items-center"
        data-mos="fade-in"
        data-mos-anchor="#hero-side"
        data-mos-delay=".5"
      >
        <div class="relative h-full overflow-hidden rounded-xl border">
          <a href="/games/econrunes/">
            <Image
            src={heroImage}
            class="min-h-full w-auto object-cover"
            alt="hero"
            loading="eager"
            width={500}
            densities={[1.5, 2]}
          /></a>
        </div>
      </div>
    </div>
  </div>
</section>